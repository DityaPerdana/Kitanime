        p Fitur log aktivitas akan segera hadir

block scripts
  script.
    async function checkApiStatus() {
      try {
        const response = await fetch('/api/anime/status');
        const statusElement = document.querySelector('.status-api');
        const dot = document.querySelector('.status-api-dot');
        if (response.ok) {
          statusElement.textContent = 'Online';
          statusElement.className = 'status-api ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-emerald-500/10 text-emerald-400 border border-emerald-500/30';
          if (dot) dot.className = 'w-2 h-2 rounded-full bg-emerald-500 shrink-0 status-api-dot';
        } else {
          statusElement.textContent = 'Error';
          statusElement.className = 'status-api ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-500/10 text-red-400 border border-red-500/30';
          if (dot) dot.className = 'w-2 h-2 rounded-full bg-red-500 shrink-0 status-api-dot';
        }
      } catch (error) {
        const statusElement = document.querySelector('.status-api');
        const dot = document.querySelector('.status-api-dot');
        statusElement.textContent = 'Offline';
        statusElement.className = 'status-api ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-500/10 text-red-400 border border-red-500/30';
        if (dot) dot.className = 'w-2 h-2 rounded-full bg-red-500 shrink-0 status-api-dot';
      }
    }

    checkApiStatus();

    setInterval(() => {
      checkApiStatus();
    }, 30000);
