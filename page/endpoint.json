{
  "base_url": "https://arufanime-apis.vercel.app/v1",
  "endpoints": {
    "home": "/home",
    "ongoing_anime": "/ongoing-anime",
    "complete_anime": "/complete-anime",
    "anime_detail": "/anime/{slug}",
    "anime_episodes": "/anime/{slug}/episodes",
    "episode_detail": "/anime/{slug}/episodes/{episode}",
    "search": "/search",
    "genres": "/genres",
    "genre_detail": "/genres/{slug}"
  },
  "fallback_enabled": true,
  "timeout": 10000,
  "retry_attempts": 3,
  "cache_duration": 300
}
