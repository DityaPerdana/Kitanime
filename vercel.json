{
  "version": 2,
  "installCommand": "npm install --prefix api && npm install --prefix page",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node@3.0.7",
      "config": { "includeFiles": ["api/**/**"] }
    },
    {
      "src": "page/app.js",
      "use": "@vercel/node@3.0.7",
      "config": {
        "includeFiles": [
          "page/views/**",
          "page/public/**",
          "page/data/**",
          "page/routes/**",
          "page/middleware/**",
          "page/services/**",
          "page/models/**",
          "page/endpoint.json",
          "page/apiResponse/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "^\/(api|v1)(?:\/.*)?$", "dest": "/api/index.js" },
    { "src": "^(?!\/(api|v1))(.*)", "dest": "/page/app.js" }
  ]
}
